<%- include ('templates/header'); -%>

	
	<nav>
         <a href="/"><strong>Home</strong></a>
         <a href="/myRecipes">My Recipes</a>
         <a href="/register">Sign Up</a>
         <a href="/createRecipe">Create Recipe</a>
    </nav>
  
        <hr>

        <h1 class="jumbotron"> Create Recipe </h1>
        
    	<hr>
	
	<form action='/createRecipe' method='POST'>
	    
		<div class='form-group row'>
			<label for='recipeName' class='col-sm-4 col-form-label'>Recipe Name</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='recipeName' name='recipeName' placeholder='Burger' required>
			</div>
		</div>
		
		<div class='form-group row'>
			<label for='calories' class='col-sm-4 col-form-label'>Calories</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='calories' name='calories' placeholder='100' required>
			</div>
		</div>
		
		<div class='form-group row'>
			<label for='ingredients' class='col-sm-4 col-form-label'>Ingredients</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='ingredients' name='ingredients' placeholder='3 eggs, 2 pancakes' required>
			</div>
		</div>
		
		<div class='form-group row'>
			<label for='numberOfServings' class='col-sm-4 col-form-label'>Number of Servings</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='numberOfServings' name='numberOfServings' placeholder='3' required>
			</div>
		</div>
		
		<div class='form-group row'>
			<label for='healthLabel' class='col-sm-4 col-form-label'>Health Label</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='healthLabel' name='healthLabel' placeholder='Sugar-Conscious' required>
			</div>
		</div>
		

		<div class='form-group row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4'>
				<button class='btn btn-primary btn-block'>Submit</button>
			</div>
			<div class='col-sm-4'></div>
		</div>
	</form>
</div>