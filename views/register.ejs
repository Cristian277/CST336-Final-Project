<%- include ('templates/header'); -%>
<div class='container'>
	<div class='jumbotron'>
		<h1> Food and Recipes </h1>
		<a class='btn btn-primary' href='/'>Home</a>
	</div>
	
	<h3>Create Account</h3>
	<form action='/register' method='POST'>
		<div class='form-group row'>
			<label for='username' class='col-sm-4 col-form-label'>Username</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='username' name='username' placeholder='Joey' required>
			</div>
		</div>
		<div class='form-group row'>
			<label for='password' class='col-sm-4 col-form-label'>Password</label>
			<div class='col-sm-4'>
				<input type='password' class='form-control' id='password' name='password' placeholder='Appleseed' required>
			</div>
		</div>
		<div class='form-group row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4'>
				<button class='btn btn-primary btn-block'>Create Account</button>
			</div>
			<div class='col-sm-4'></div>
		</div>
	</form>
</div>