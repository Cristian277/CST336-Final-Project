<%- include ('templates/header'); -%>

		<nav>
           <a href="/"><strong>Home</strong></a>
        </nav>
        <hr>
	
	 <h1 class="jumbotron"> Login </h1>
	
    <%if(typeof error != 'undefined' && error){%>
        <h6 style='color: red;'> Incorrect login credentials! </h6>
	<%}%>
	
	<form action='/login' method='POST'>
		
		<div class='form-group row'>
			<label for='username' class='col-sm-4 col-form-label'>Username</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='username' name='username' placeholder='John' required>
			</div>
		</div>
		<div class='form-group row'>
			<label for='password' class='col-sm-4 col-form-label'>Password</label>
			<div class='col-sm-4'>
				<input type='password' class='form-control' id='password' name='password' placeholder='Password123' required>
			</div>
		</div>
		
		<div class='form-group row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4'>
				<button class='btn btn-primary btn-block'>Login</button>
			</div>
			<div class='col-sm-4'></div>
		</div>
	</form>
	
	<form action='/register' method='GET'>
	<div class='form-group row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4'>
				<button class='btn btn-primary btn-block'>Create Account</button>
			</div>
			<div class='col-sm-4'></div>
		</div>
	</form>
	
</div>